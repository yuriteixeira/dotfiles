[core]
  excludesfile = /Users/yuriteixeira/.gitignore_global
  autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX

[interactive]
  diffFilter = (echo && diff-so-fancy)

[push]
  default = current

[pull]
  default = current
  rebase = true

[rebase]
  autosquash = true

[diff]
  tool = nvim-diff

[merge]
  tool = nvim-diff
  conflictstyle = diff3

[mergetool "nvim-diff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[color "diff"]
  meta = yellow bold

[alias]
  ### FLOW

  # clean
  cl = checkout -- . && git reset --hard && git clean -idfx

  # get
  u = pull --rebase
  f = fetch
  fa = fetch --all
  fo = fetch origin

  # change
  b = branch
  co = checkout
  com = checkout master
  a = add
  ap = add -p
  st = stash
  c = commit -v # with diff
  ca = commit -v --amend --no-edit
  can = commit -v --amend --no-edit -n
  ch = cherry-pick
  re = reset
  rep = reset HEAD~
  reom = reset origin/master

  # check
  s = status
  h = log --follow -p -M --stat # history of a file
  l = log --pretty='%C(red)%h %C(reset)%s %C(bold blue)%an, %C(green)%cr%C(yellow)%d %C(reset)' # usually my favorite format
  lo = log # default format (comes with more info)
  rl = reflog
  d = diff
  dc = diff --cached

  # organise
  r = rebase
  rom = rebase origin/master
  ri = rebase -i
  riom = rebase -i origin/master

  # send
  p = push -u
  pf = push --force-with-lease # checks for same parent commit on origin before

